    "version": "2.0.0",
    "tasks": [
        //ggebuild windows
        {
            "label": "ggebuild_windows",
            "type": "shell",
            "command": "%GGELUA%/build/windows/build.bat",
            "args": [
                "${workspaceFolder}"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "lua",
                "fileLocation": [
                    "autoDetect",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "([^\"]+)\"\\]:(\\d+):\\s*(.*)",
                    "file": 1,
                    "line": 2,
                    "message": 3
                }
            }
        },
